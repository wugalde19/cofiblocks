{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"ignore": [
			"scripts/*.js",
			".next/**",
			"*/**/.next/**",
			"node_modules/**",
			"apps/web/storybook-static/**",
			"apps/web/.storybook/**"
		]
	}
}
